<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-light bg-light mb-4">
        <div class="container">
            <a href="/register/cancel" class="btn btn-secondary">Cancel Registration</a>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </nav>
    <div class="container py-5">
        <h1 class="text-center mb-4">Available Events</h1>
        <div class="row">
            <% events.forEach(function(event) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= event.name %></h5>
                            <p class="card-text"><%= event.description %></p>
                            <p class="card-text">
                                <strong>Date:</strong> <%= new Date(event.date).toDateString() %><br>
                                <strong>Registered:</strong> <%= event.registeredStudents %> / <%= event.capacity %>
                            </p>

                                <form action="/register/place" method="POST">
                                    <input type="hidden" name="eventId" value="<%= event._id %>">
                                    <button type="submit" class="btn btn-primary w-100">Register</button>
                                </form>
                            <a href="/events/details/<%= event._id %>" class="btn btn-link w-100 mt-2">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% if (error) { %>
            <div class="alert alert-danger text-center mt-4"><%= error %></div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>